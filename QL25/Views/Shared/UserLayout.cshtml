<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    @*@Styles.Render("~/Content/jstree_css")*@
    <link href="@Url.Content("~/Content/admin_css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/font-awesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/solid.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/mycss/user_page.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/mycss/color.css")" rel="stylesheet" />
    @*@Styles.Render("~/Content/gtree")*@
    <link href="@Url.Content("~/Content/gtree/gtree.css")" rel="stylesheet" />
    @*@Scripts.Render("~/bundles/modernizr")*@
    @*@Scripts.Render("~/bundles/jquery")*@
    <script src="@Url.Content("~/Scripts/jquery-3.7.1.js")"></script>
    <link rel="stylesheet" href="~/Content/css/all.min.css">

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-green-300">
        <div class="container-fluid">
            @Html.ActionLink("QL25", "Index", "User", new { dV_ID = ViewBag.dV_ID }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Cán bộ, nhân viên", "CanBoNhanVienIndex", "User", new { dV_ID = ViewBag.dV_ID }, new { @class = "nav-link" })</li>
                </ul>
                @if (Request.IsAuthenticated)
                {
                    <ul class="navbar-nav navbar-right">
                        <li>
                            <a class="nav-link">Welcome, @ViewBag.UserName</a>
                        </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })</li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content min-vh-75">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
    @*@Scripts.Render("~/bundles/gtree")*@
    <script src="@Url.Content("~/Scripts/gtree/gtree.js")"></script>
    @*@Scripts.Render("~/bundles/UserLayout")*@
    <script src="@Url.Content("~/Scripts/MyScripts/UserLayout.js")"></script>
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

</body>
</html>
