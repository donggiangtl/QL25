<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/user_css")
    @Styles.Render("~/Content/gtree")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="~/Content/css/all.min.css">
    
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-green-300">
        <div class="container-fluid">
            @Html.ActionLink("QL25", "Index", "User", new { dV_ID = ViewBag.dV_ID }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Cán bộ, nhân viên", "CanBoNhanVienIndex", "User", new { dV_ID = ViewBag.dV_ID }, new { @class = "nav-link" })</li>
                </ul>
                @if (Request.IsAuthenticated)
                {
                    <ul class="navbar-nav navbar-right">
                        <li>
                            <a class="nav-link">Welcome, @ViewBag.UserName</a>
                        </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })</li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content min-vh-75">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/gtree")
    @Scripts.Render("~/bundles/UserLayout")

    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>
