@model DataIO.Data.ChuyenNganh
@{
    ViewBag.Title = "ChuyenNganhEdit";
    Layout = "~/Views/Shared/_AjaxAdminLayout.cshtml";
}
@using (Html.BeginForm("ChuyenNganhEdit", "AdminSystem", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
