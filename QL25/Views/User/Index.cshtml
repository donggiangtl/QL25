
@{
    ViewBag.Title = "UserIndex";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h5 class="align-content-center">Bạn đang quản lý đơn vị: @ViewBag.TenDV</h5>
<div class="row g-4">
    <div class="col-lg-4 col-md-6">
        <div class="service bg-green-200 border border-success border-2 rounded d-flex flex-column">
            <div class="d-flex justify-content-center align-items-center">
                <img class="me-1" src="~/Images/img/icon1.png" alt="">
                <h5>Quản lý cán bộ, nhân viên</h5>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                @Html.ActionLink("Bắt đầu", "CanBoNhanVienIndex", "User", new { dV_ID = ViewBag.dV_ID }, new { @class = "btn btn-outline-success" })
            </div>            
        </div>
    </div>
    
</div>